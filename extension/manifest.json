{
    "manifest_version": 2,
    "name": "Web Content Capture",
    "version": "1.0",
    "description": "Captures webpage content and sends to server",
    "permissions": [
      "activeTab",
      "http://*/*",
      "https://*/*"
    ],
    "browser_action": {
      "default_title": "Capture Content"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }